{% extends 'ProbesysAdminBundle::base.html.twig' %}

{% block content %}
<div class="span12">
    <div class="row-fluid">
        <ul class="breadcrumb">
            <li class="">
                <a href="/admin/">{{ 'generic.dashboard'|trans({}, 'ProbesysAdminBundle') }}</a>
            </li>
            <span class="divider">/</span>
            <li>
                <a href="{{ path('admin_setting') }}">Setting</a>
            </li>
            <span class="divider">/</span>
            <li>
                <a href="{{ path('admin_setting_show', { 'id': entity.id }) }}">Setting #{{ entity.id }}</a>
            </li>
            <span class="divider">/</span>
            <li class="active">
                {{ 'generic.delete'|trans({}, 'ProbesysAdminBundle') }}
            </li>
        </ul>
        <ul class="nav nav-tabs">
            <li class="icon new_collection_link" rel="" title="">
                <a href="{{ path('admin_setting_show', { 'id': entity.id }) }}" tabindex="2">
                    <i class="icon-eye-open"></i>
                    <span>{{ 'generic.show'|trans({}, 'ProbesysAdminBundle') }}</span>
                </a>
            </li>
                        <li class="icon new_collection_link" rel="" title="">
                <a href="{{ path('admin_setting_edit', { 'id': entity.id }) }}" tabindex="2">
                    <i class="icon-pencil"></i>
                    <span>{{ 'generic.edit'|trans({}, 'ProbesysAdminBundle') }}</span>
                </a>
            </li>
                                    <li class="icon new_collection_link active" rel="" title="">
                <a href="{{ path('admin_setting_delete', { 'id': entity.id }) }}" tabindex="2">
                    <i class="icon-remove"></i>
                    <span>{{ 'generic.delete'|trans({}, 'ProbesysAdminBundle') }}</span>
                </a>
            </li>
                    </ul>
        <div class="alert alert-block alert-error fade in">
            <h4 class="alert-heading">Are you sure you want to delete this ?</h4>
        </div>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Setting_name</th>
                    <td>{{ entity.settingname }}</td>
                </tr>
                <tr>
                    <th>Setting_value</th>
                    <td>{{ entity.settingvalue }}</td>
                </tr>
            </tbody>
        </table>

                <form method="post" id="delete_setting_{{ entity.id }}" class="delete_setting" action="{{ path('admin_setting_delete', { 'id': entity.id }) }}">
            <div class="form-actions">
                <button type="submit" name="_save" class="btn btn-danger">
                    <i class="icon-white icon-ok"></i>
                    {{ 'generic.delete'|trans({}, 'ProbesysAdminBundle') }}
                </button>
                <span class="extra_buttons">
                    <a href="{{ path('admin_setting') }}" class="btn">
                        <i class="icon-remove"></i>
                        {{ 'generic.cancel'|trans({}, 'ProbesysAdminBundle') }}
                    </a>
                </span>
            </div>
        </form>
    </div>
</div>
{% endblock %}
